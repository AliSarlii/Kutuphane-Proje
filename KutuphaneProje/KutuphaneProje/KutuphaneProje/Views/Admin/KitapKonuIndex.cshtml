@model KutuphaneProje.Models.Kitap_Konusu
@{
    ViewBag.Title = "KitapKonuIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mt-4 text-center">Kitap Konusu</h1>
<br>

<div class="container body-content">
    <div style="display:flex; justify-content:space-evenly; flex-wrap:wrap; align-items:flex-start; align-content:center; ">
        <div style="min-width:max-content;">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Kitap Konusu</th>
                        <th scope="col">#</th>
                    </tr>
                </thead>
                @foreach (var item in ViewBag.Veri)
                {
                    <tbody>
                        <tr>
                            <td>@(item.KitapKonusu)</td>
                            <td> @Html.ActionLink("Sil", "KitapKonuDelete", new { id = item.Id }, new { @class = "btn btn-outline-warning" })</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>

        <div>

            <form method="post" action="/Admin/KitapKonuIndex/">
                @Html.AntiForgeryToken()
                <div style="display: block; margin: auto;">

                    <div style="display: block; margin: auto; max-width:700px;">
                        @Html.EditorFor(m => m.KitapKonusu, new { htmlAttributes = new { @class = "form-control", @style = "margin: auto; max-width:400px;", @placeholder = "Kitabın Konusunu girin", @autocomplete = "off" } })
                    </div>
                    <br />
                    <div style="display: block; margin:auto; max-width:700px;">
                        <button type="submit" class="btn btn-success" style="margin:auto; display:block;">Kitap Konu Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
